<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="128dp"
        android:background="#373737"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondary_map_view"
        app:layout_constraintEnd_toEndOf="@+id/secondary_map_view"
        app:layout_constraintStart_toStartOf="@+id/secondary_map_view"
        app:layout_constraintTop_toTopOf="@+id/secondary_map_view" />

    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#393939"
        android:elevation="0dp">

    </com.here.sdk.mapview.MapView>

    <com.here.sdk.mapview.MapView
        android:id="@+id/secondary_map_view"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="1000dp"
        app:layout_constraintBottom_toBottomOf="@id/map_view"
        app:layout_constraintEnd_toEndOf="@id/map_view">

    </com.here.sdk.mapview.MapView>

</android.support.constraint.ConstraintLayout>
